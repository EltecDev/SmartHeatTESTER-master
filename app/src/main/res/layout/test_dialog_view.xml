<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/testTitleTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="18dp"
        android:text="Prueba de"
        android:textColor="#212121"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/step1Layout"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layout_marginTop="12dp">

        <RelativeLayout
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp">

            <ProgressBar
                android:id="@+id/progressBar1"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:padding="5dp" />

            <ImageView
                android:id="@+id/statusImageView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="7dp"
                android:visibility="gone"
                app:srcCompat="@drawable/icon_incomplete" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="15dp"
            android:text="CONECTAR"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/statusText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="16dp"
            android:text="Estableciendo conexiÃ³n con el equipo..." />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/step2Layout"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerVertical="false"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="16dp">

            <ProgressBar
                android:id="@+id/progressBar2"
                style="?android:attr/progressBarStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/statusImageView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="7dp"
                app:srcCompat="@drawable/icon_incomplete" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="15dp"
            android:text="PROBAR"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/statusText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView6"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="16dp"
            android:maxLines="3" />

    </RelativeLayout>
</LinearLayout>